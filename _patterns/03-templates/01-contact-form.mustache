<div class="contact-form clearfix">
    <form method="get" name="contact">
        <header class="header">
            <div>
                <h1>Nous envoyer un mail</h1>
            </div>
        </header>
        <div class="split">
            <div class="field-container">
                <label for="name">Nom</label>
                <input id="name" type="name" placeholder="ex: Pshit">
            </div>
            <div class="field-container">
                <label for="firstname">Pr√©nom</label>
                <input id="firstname" type="firstname" placeholder="ex: Daniela">
            </div>
            <div class="field-container">
                <label for="email">Email</label>
                <input id="email" type="email" placeholder="ex: dapshit@north.fr">
            </div>
            <div class="field-container">
                <label for="emailconf">Confirmation de l'email</label>
                <input id="emailconf" type="emailconf" placeholder="ex: dapshit@north.fr">
            </div>
        </div>
        <div class="split bd-left">
            <div class="field-container">
                <label for="subject">Objet</label>
                <select id="subject" name="subject">
                    <option>Demande d'information</option>
                    <option>Un autre sujet</option>
                    <option>celui la est gratuit</option>
                </select>
            </div>
            <div class="field-container">
                <label for="body">Message</label>
                <textarea id="body" rows="6" cols="48"></textarea>
            </div>
            <div class="field-container">
                <button class="btn secondary width-full" type="submit" title="">
                    Envoyer
                </button>
            </div>
        </div>
    </form>
</div>
